# ========================================
# V3 USA Visa Scheduler - Configuration
# ========================================

# Database Configuration
DB_NAME=visa_scheduler
DB_USER=visabot
DB_PASSWORD=change_this_secure_password

# Visa Portal Credentials
VISA_EMAIL=your_email
VISA_PASSWORD=sensitive_passowrd
COUNTRY_CODE=ca  # Canada (change if different)
USER_ID=  # Optional: Auto-extracted if not provided

# Target Facilities (Comma-separated facility IDs)
# Toronto=94, Calgary=89, Vancouver=95
FACILITIES=94,89,95

# Timezone (IMPORTANT: Must be America/New_York for EST)
TZ=America/New_York

# Scheduling Window (7pm EST to 5am EST)
CHECK_START_HOUR=19  # 7pm EST
CHECK_END_HOUR=5     # 5am EST (next day)

# V3 uses continuous loop with random delays like V2
MIN_DELAY_SEC=5      # Minimum delay between checks (5 seconds)
MAX_DELAY_SEC=30     # Maximum delay between checks (30 seconds)
# This gives 4-6 checks per minute on average, matching V2 extension behavior

# Session Refresh (navigate to page periodically to maintain state)
SESSION_REFRESH_MIN=10  # Refresh page navigation every 10 minutes (like V2)

# Booking Settings
MAX_BOOKING_RETRIES=3
START_DATE_FILTER=  # Optional: YYYY-MM-DD (earliest acceptable date)
END_DATE_FILTER=    # Optional: YYYY-MM-DD (latest acceptable date)

# Logging
LOG_LEVEL=info  # Options: debug, info, warn, error

# Encryption Key (32 characters for AES-256)
# Generate with: openssl rand -hex 16
ENCRYPTION_KEY=change_this_32char_encryption_key

# Optional: PgAdmin (for database UI - only with --profile debug)
PGADMIN_EMAIL=admin@visascheduler.local
PGADMIN_PASSWORD=admin
